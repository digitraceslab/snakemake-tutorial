IDS = ['u00', 'u01']
STUDIES = ['study_A', 'study_B']

rule all:
    input:
        expand('data/interim/{study}/call_hourly.csv', study = STUDIES)

rule process:
    input:
        expand('data/raw/{{study}}/conversation_{id}.csv', id = IDS)
    output:
        'data/interim/{study}/call_duration.csv'
    script:
        "scripts/preprocess.py"

rule resample:
    input:
         'data/interim/{study}/call_duration.csv'
    output:
        'data/interim/{study}/call_hourly.csv'
    script:
        "scripts/resample.py"
    